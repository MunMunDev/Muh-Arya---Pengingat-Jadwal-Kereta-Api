<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="18dp">

    <TextView
        android:id="@+id/tvInisial"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textSize="22sp"
        android:text="A"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_circle_2" />

    <TextView
        android:id="@+id/tvNamaUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvInisial"
        app:layout_constraintBottom_toBottomOf="@id/tvInisial"
        app:layout_constraintStart_toEndOf="@id/tvInisial"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="14dp"
        android:text="User"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvKomentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvInisial"
        android:layout_marginTop="10dp"
        android:text="Boleh nih dicoba anak SMP juga untuk merasakan naik kereta masuk bu haji"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="2dp"/>

<!--    <TextView-->
<!--        android:id="@+id/tvBalas"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintTop_toBottomOf="@id/tvKomentar"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:text="Balas"-->
<!--        android:textSize="14sp"-->
<!--        android:textColor="@color/abuabu_tua"/>-->

    <TextView
        android:id="@+id/tvHapus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvKomentar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:text="Hapus"
        android:textSize="14sp"
        android:textColor="@color/merah"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvKomentar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text="13 Oktober 2024"
        android:textSize="14sp"
        android:textColor="@color/abuabu_tua"/>

</androidx.constraintlayout.widget.ConstraintLayout>