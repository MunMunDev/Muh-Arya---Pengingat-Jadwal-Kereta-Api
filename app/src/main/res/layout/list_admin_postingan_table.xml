<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvNo"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="NO"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_table"/>
    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Kereta ini keren dan keren dan dan asdfgh"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>
    <TextView
        android:id="@+id/tvGambar"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="IMG"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:background="@drawable/bg_table"
        android:gravity="center"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/ivGambar"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_postingan"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tvWaktu"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="17-08-1945 12:00:00"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text=":::"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_table"/>

</LinearLayout>