<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:background="@drawable/bg_card_postingan">

    <com.ortiz.touchview.TouchImageView
        android:id="@+id/ivPostingan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:maxHeight="200dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/gambar_main"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/llAksi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivPostingan"
        app:layout_constraintEnd_toEndOf="@id/ivPostingan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivLike"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_hati"/>
        <ImageView
            android:id="@+id/ivKomentar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/icon_komentar"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/llAksi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ivPostingan"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="aisjfklsafjlas adsfjadslk jask akjfhaksjf aads\n sasdfjksahkfjah \n asdjkdfhakf"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:lineSpacingExtra="4dp"/>

    <TextView
        android:id="@+id/tvWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCaption"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:text="12 September 2023"
        android:textColor="@color/black"
        android:textSize="14sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>