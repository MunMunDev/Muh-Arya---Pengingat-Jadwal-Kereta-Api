<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.user.SemuaJadwalActivity"
    android:id="@+id/drawerLayoutMain">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <View
            android:id="@+id/bgHeader"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            android:background="@color/biru_bg_main"/>

        <ImageView
            android:id="@+id/ivDrawerView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="19dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/baseline_dehaze_24_white"
            android:elevation="10dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivDrawerView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:elevation="10dp"
            android:text="Semua Jadwal"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <HorizontalScrollView
            android:id="@+id/hsHari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/bgHeader"
            android:layout_marginTop="14dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btnSemua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Semua"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/bg_card_tiket_pilih"/>
                <TextView
                    android:id="@+id/btnSenin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Senin"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/bg_card_tiket"/>
                <TextView
                    android:id="@+id/btnSelasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selasa"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/bg_card_tiket"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:id="@+id/btnRabu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rabu"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/bg_card_tiket"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:id="@+id/btnKamis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamis"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/bg_card_tiket"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:id="@+id/btnJumat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumat"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/bg_card_tiket"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:id="@+id/btnSabtu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sabtu"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/bg_card_tiket"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:id="@+id/btnMinggu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minggu"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/bg_card_tiket"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTiket"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/hsHari"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="12dp"
            tools:listitem="@layout/list_tiket"
            tools:itemCount="5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu_user"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>